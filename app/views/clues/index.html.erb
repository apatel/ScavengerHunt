<h2>Clues</h2>

<h3><%= link_to "Add New", new_clue_url %></h3>

<table class="table table_condensed table-striped">
	<tr>
		<th>Clue Text</th>
		<th>Actions</th>
	</tr>	
<% @clues.each do |clue| %>
<tr>
  <td><%= link_to clue.clue_text, clue_url(clue) %></td>
  <td>
  	<%= link_to "Edit", edit_clue_url(clue) %> | 
  	<%= link_to "Delete", clue, confirm: 'Are you sure?', method: :delete %>
</td>
</tr>
<% end %>
</table>