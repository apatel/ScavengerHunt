<h2>Locations</h2>

<h3><%= link_to "Add New", new_location_url %></h3>

<table class="table table_condensed table-striped">
	<tr>
		<th>Name</th>
		<th>QR URL</th>
		<th>Actions</th>
	</tr>	
<% @locations.each do |location| %>
<tr>
  <td><%= location.name %></td>
  <td>http://www.cupcakefu.com/clue_maps/check_in?current=<%= location.id %></td>
  <td>
  	<%= link_to "Edit", edit_location_url(location) %> | 
  	<%= link_to "Delete", location, confirm: 'Are you sure?', method: :delete %>
</td>
</tr>
<% end %>
</table>