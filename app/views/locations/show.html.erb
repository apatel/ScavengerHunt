<h2>Location</h2>

<% unless @location.nil? %>
   <%= @location.name %> <%= link_to "Edit", edit_location_url(@location) %>
    <br /><br />
    <% @location.clues.each do |clue| %>
	  Clue:<br /> 
	  <%= clue.clue_text %> <%= link_to "Edit", edit_clue_url(clue) %><br /><br />
	  <a href="#" onclick="toggle_hints('hints');">View Hint(s)</a>
      <div id="hints" style="display:none;">
	    <% clue.hints.each do |hint| %>
          <%= hint.hint_text %> <%= link_to "Edit", edit_hint_url(hint) %>
		  <br /><br />
        <% end %>
	  </div>	
    <% end %>
<% else %>
  No Location Available
<% end %>  
